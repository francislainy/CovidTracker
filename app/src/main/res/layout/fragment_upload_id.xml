<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.UploadIdFragment">

    <include
        android:id="@+id/titleAndProgressBar"
        layout="@layout/title_and_progress_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvUploadYourIdDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="A member of the Contact Tracing team may ask you to share Random IDs generated by your phone over the previous 14 days.\n\nIf so, you will receive a unique 6-digit code by text message to activate the upload functionality."
        android:textColor="@color/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleAndProgressBar" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvUploadYourIdDescription">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_et">

            <EditText
                android:id="@+id/et1"
                style="@style/etRandomIdStyle" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_et">

            <EditText
                android:id="@+id/et2"
                style="@style/etRandomIdStyle" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_et">

            <EditText
                android:id="@+id/et3"
                style="@style/etRandomIdStyle" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_et">

            <EditText
                android:id="@+id/et4"
                style="@style/etRandomIdStyle" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_et">

            <EditText
                android:id="@+id/et5"
                style="@style/etRandomIdStyle" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_et">

            <EditText
                android:id="@+id/et6"
                style="@style/etRandomIdStyle" />

        </FrameLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvPinFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Please fill all fields."
        android:textColor="@color/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>