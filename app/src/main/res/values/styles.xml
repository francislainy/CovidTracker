<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="radio_gender_selection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rectangle_radio_button</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:padding">14dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:button">@drawable/selector_radio_button</item>
    </style>

    <style name="AppTheme.Dialog.Custom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="BottomNavigationStyle">
        <item name="android:gravity">center</item>
        <item name="android:lines">2</item>
        <item name="android:textSize">10dp</item>
        <item name="android:padding">2dp</item>
    </style>


    <style name="pbStyle" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:progress">60</item>
        <item name="android:progressBackgroundTint">@color/yellow</item>
        <item name="android:progressTint">@color/darkerYellow</item>
        <item name="android:scaleY">.5</item>
    </style>

</resources>