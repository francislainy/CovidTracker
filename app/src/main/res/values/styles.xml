<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="radio_gender_selection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rectangle_radio_button</item>
        <item name="android:backgroundTint">@color/shadow</item>
        <item name="android:padding">14dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:button">@drawable/selector_radio_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Dialog.Custom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="BottomNavigationStyle">
        <item name="android:gravity">center</item>
        <item name="android:lines">2</item>
        <item name="android:textSize">10dp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="pbStyle" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:progress">60</item>
        <item name="android:secondaryProgress">20</item>
        <item name="android:progressDrawable">@drawable/gradient_progress</item>
        <item name="android:scaleY">.5</item>
    </style>

    <style name="styleArrowNext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/teal</item>
    </style>

    <style name="buttonStatus">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@drawable/rectangle_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/shadow</item>
        <item name="android:textScaleX">1.2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="materialCardStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:theme">@style/Theme.MaterialComponents.Light</item>
        <item name="strokeColor">@color/greyCcc</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardCornerRadius">6dp</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="textTotalsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>